{
  "name": "vscode-any-lint",
  "displayName": "any-lint",
  "description": "VSCode Any Lint allows you to lint any files with any command line tools",
  "author": {
    "name": "tamayika",
    "email": "tamayika40@gmail.com",
    "url": "https://github.com/tamayika"
  },
  "homepage": "https://github.com/tamayika/vscode-any-lint",
  "publisher": "tamayika",
  "repository": {
    "url": "https://github.com/tamayika/vscode-any-lint"
  },
  "version": "0.0.6",
  "engines": {
    "vscode": "^1.52.0"
  },
  "categories": [
    "Linters"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Any Lint Configuration",
      "properties": {
        "any-lint.linters": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "name",
              "binPath"
            ],
            "properties": {
              "name": {
                "type": "string"
              },
              "disabled": {
                "type": "boolean"
              },
              "binPath": {
                "type": "string"
              },
              "args": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "cwd": {
                "type": "string"
              },
              "condition": {
                "type": "string"
              },
              "on": {
                "type": "array",
                "items": {
                  "enum": [
                    "change",
                    "save"
                  ]
                }
              },
              "diagnostic": {
                "type": "object",
                "properties": {
                  "output": {
                    "type": "string",
                    "enum": [
                      "stdout",
                      "stderr"
                    ]
                  },
                  "type": {
                    "type": "string",
                    "enum": [
                      "lines",
                      "json",
                      "yaml"
                    ]
                  },
                  "format": {
                    "type": "string"
                  },
                  "selectors": {
                    "type": "object",
                    "properties": {
                      "diagnostics": {
                        "type": "string"
                      },
                      "file": {
                        "type": "string"
                      },
                      "subDiagnostics": {
                        "type": "string"
                      },
                      "startLine": {
                        "type": "string"
                      },
                      "startColumn": {
                        "type": "string"
                      },
                      "endLine": {
                        "type": "string"
                      },
                      "endColumn": {
                        "type": "string"
                      },
                      "message": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "diagnostics",
                      "file",
                      "startLine",
                      "startColumn"
                    ]
                  },
                  "lineZeroBased": {
                    "type": "boolean"
                  },
                  "columnZeroBased": {
                    "type": "boolean"
                  },
                  "columnCharacterBased": {
                    "type": "boolean"
                  },
                  "endColumnInclusive": {
                    "type": "boolean"
                  },
                  "severity": {
                    "type": "string",
                    "enum": [
                      "error",
                      "warning",
                      "info",
                      "hint"
                    ]
                  },
                  "actions": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "enum": [
                            "openUri",
                            "ignore"
                          ]
                        },
                        "title": {
                          "type": "string"
                        },
                        "uri": {
                          "type": "string"
                        },
                        "comment": {
                          "type": "string"
                        },
                        "location": {
                          "type": "string",
                          "enum": [
                            "startFile",
                            "previousLine",
                            "currentLine",
                            "nextLine"
                          ]
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/js-yaml": "^4.0.0",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "glob": "^7.1.6",
    "mocha": "^8.1.3",
    "prettier": "^2.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.4.1"
  },
  "dependencies": {
    "js-yaml": "^4.0.0"
  }
}
